{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "strict": false,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "forge.config.ts", "vite.config.ts", "types/**/*"],
    "exclude": ["node_modules", "public/build", "whisper_web/out", "dist"]
}
