{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "types": ["node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["dist", "node_modules"]
}
